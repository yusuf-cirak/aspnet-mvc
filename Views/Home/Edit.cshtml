                                            hobbyIds:hobbyIds,
                                            classTeacherId:$('select#ClassTeacherId').val(),
                                            mentorTeacherId:$('select#MentorTeacherId').val()
                                        }
                                        console.log(studentData)
                            $('#editBtn').attr('disabled','true')
                         inputFullName.attr('disabled','true')
                         inputFullName.attr("value","")
                         inputFullName.val("")



